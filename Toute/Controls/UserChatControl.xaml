<UserControl x:Class="Toute.UserChatControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Toute"
             mc:Ignorable="d"
             d:DataContext="{x:Static local:ChatUserDesignModel.Instance}">

    <!--Border around User-->
    <Border Background="Transparent" Name="border">
        <!--Content-->

        <Grid>
            <Grid.ColumnDefinitions>
                <!--Image-->
                <ColumnDefinition Width="auto"/>
                <!--Text-->
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!--Image-->
            <Border Grid.Column="0" 
                    CornerRadius="5" 
                    Width="40"
                    Margin="5">
                <Image Source="/Images/SampleImageForAGame.png" />
            </Border>

            <!--Text-->
            <Border Grid.Column="1" 
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Padding="30 15">
                <TextBlock Text="{Binding Name}"
                           FontSize="28"/>
            </Border>

        </Grid>
    </Border>
</UserControl>
